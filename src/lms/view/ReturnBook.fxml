<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" style="-fx-background-color: white;" stylesheets="@../../resource/style.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lms.controller.ReturnBookController">
   <children>
      <TextField fx:id="txtSearchMember" prefWidth="745.0" promptText="ស្វែងរកអ្នកដែលបានខ្ចីសៀវភៅតាមរយៈឈ្មោះ" styleClass="text-search">
         <font>
            <Font name="Kh System" size="15.0" />
         </font>
      </TextField>
      
      <TableView fx:id="tblMember" layoutY="50.0" prefHeight="180.0" prefWidth="745.0">
        <columns>
          <TableColumn fx:id="cMid" prefWidth="75.0" text="លេខសម្គាល់" />
          <TableColumn fx:id="cName" prefWidth="75.0" text="ឈ្មោះ" />
            <TableColumn fx:id="cLatin" prefWidth="75.0" text="ជាអក្សរឡាតាំង" />
            <TableColumn fx:id="cGender" prefWidth="75.0" text="ភេទ" />
            <TableColumn fx:id="cPhone" prefWidth="75.0" text="លេខទូរស័ព្ទ" />
            <TableColumn fx:id="cLate" prefWidth="75.0" text="ចំនួនថ្ងៃបានខ្ចី" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <MaterialIconView fill="RED" glyphName="CLOSE" layoutX="715.0" layoutY="28.0" onMouseClicked="#clickClear" size="25">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </MaterialIconView>
      <TableView fx:id="tblBook" layoutY="280.0" prefHeight="180.0" prefWidth="745.0">
         <columns>
            <TableColumn fx:id="cBid" prefWidth="75.0" text="កូដ/ISBN" />
            <TableColumn fx:id="cTitle" prefWidth="75.0" text="ចំណងជើង" />
            <TableColumn fx:id="cIssueDate" prefWidth="75.0" text="កាលបរិច្ឆេទខ្ចី" />
            <TableColumn fx:id="cReturn" prefWidth="75.0" text="កាលបរិច្ឆេទត្រូវសង" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button fx:id="btnReturn" alignment="CENTER" layoutX="670.0" layoutY="480.0" mnemonicParsing="false" onMouseClicked="#clickReturn" prefHeight="33.0" prefWidth="75.0" text="សង" visible="false">
         <font>
            <Font name="Kh System" size="14.0" />
         </font>
      </Button>
      <Label layoutY="240.0" text="បញ្ជីសៀវភៅដែលបានខ្ចី">
         <font>
            <Font name="Kh System" size="14.0" />
         </font>
      </Label>
      <MaterialIconView fill="#909090" glyphName="SEARCH" layoutX="6.0" layoutY="28.0" onMouseClicked="#clickSearch" size="25">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </MaterialIconView>
   </children>
</AnchorPane>
